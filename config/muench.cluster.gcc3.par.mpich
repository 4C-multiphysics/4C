# -*- shell-script -*-

PLATFORM=LINUX_MUENCH
PARALLEL=yes

# just for convenience
MPIDIR=/cluster/mpich-1.2.7

# these are needed for the test runs
# we expect two test processes at most
# The hostname must be provided using a file
export PATH=$PATH:$MPIDIR/bin
MPIRUN=mpirun
hostname > $HOME/.`hostname`
MPIRUNARGS="-machinefile $HOME/.`hostname`"

PROGRAMNAME=cca_par_mpich_cluster
F77=$MPIDIR/bin/mpif77
CC=$MPIDIR/bin/mpicc
LD=$MPIDIR/bin/mpif77

INCLUDEDIRS="-I/lnm/include -I$MPIDIR/include"
LIBDIRS="-L/lnm/lib"

# aztec
AZTEC_INC=""
AZTEC_LIB="-laztec-gcc-3.3-mpich"

# spooles
SPOOLES_INC=""
SPOOLES_LIB="-lspoolesMPI-gcc-3.3-mpich -lspooles-gcc-3.3"

# umfpack
UMFPACK_INC=
UMFPACK_LIB="-lumfpack-gcc-3.3 -lamd-gcc-3.3"

# fast elements
LOOPL="-DLOOPL=15"

# visual2
VISUAL2_INC=""
VISUAL2_LIB="-L/usr/X11R6/lib -lVisual2 -lX11"

VISUAL3_INC=""
VISUAL3_LIB="-L/usr/X11R6/lib -lVisual3 -lg2c -lGLU -lGL -lX11 -lXext -ldl -lpthread"

LIBS="-llapack-gcc-3.3 -lblas-gcc-3.3 -lmetis-gcc-3.3"

CFLAGS_OPT="-O2"
FFLAGS_OPT="-O2"
LDFLAGS_OPT="-O2"

#CFLAGS_OPT="-g"
#FFLAGS_OPT="-g"
#LDFLAGS_OPT="-g"

CFLAGS="-Wall -DSIXTYFOUR -pg -ansi -D_FILE_OFFSET_BITS=64 -D_LARGEFILE64_SOURCE"
FFLAGS="-Wall -DSIXTYFOUR -pg -D_FILE_OFFSET_BITS=64 -D_LARGEFILE64_SOURCE"
LDFLAGS="-pg -Xlinker -defsym -Xlinker MAIN__=main"
