	-L/lnm/intel/compiler101/fc/10.1.013/lib \
	-L/lnm/intel/compiler101/cc/10.1.013/lib \
	-L/usr/lib/gcc/i386-redhat-linux/4.1.2/ \
	-L/usr/lib/gcc/i386-redhat-linux/3.4.6/"

