LINUX_DIST=fc6
MPI_VERSION=ser

PROGRAMNAME=cca_"$LINUX_DIST"_"$MPI_VERSION"
F77="LC_ALL=C ifort"
CC="LC_ALL=C icc"
CP="LC_ALL=C icpc"
LD="LC_ALL=C icpc"

BASEDIR=/lnm/lib/$LINUX_DIST/$MPI_VERSION

INCLUDEDIRS="-I$BASEDIR/include -I/usr/include/netcdf-3 -I/home/kloeppel/lnm_lib_local/$LINUX_DIST/$MPI_VERSION/include"
LIBDIRS="-L$BASEDIR/lib \
    -L/home/kloeppel/lnm_lib_local/$LINUX_DIST/$MPI_VERSION/lib \
