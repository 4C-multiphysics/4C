$(OBJS_FORTRAN):
		$(F77) $(FFLAGS)  -c ${SRC}/${@D}/$(*F).f -o ${SRC}/$@

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

.f.o:
	$(F77) $(FFLAGS) $(INCLUDES) -c $< -o $@

clean:
	rm -f	src/*/*.o

pack:
	find . -type f| sed -e 's/^\.//' -e 's/^\///' -e 's/.*~$$//' -e 's/^cca_.*//' -e 's/^post_gid$$//' -e 's/^post_gid_txt$$//' -e 's/^Makefile$$//' -e 's/^files$$//' -e 's/.*\.o$$//' -e '/^$$/d' | sort -u > files
	tar cjf ../ccarat-current.tar.bz2 -T files

