<ParameterList name="dummy">

  <Parameter name="Preconditioner" type="string"  value="myAMGBGS"/> 

  <!-- Preconditioners  -->

  <ParameterList name="myAMGBGS">
  <Parameter name="type" type="string"  value="AMG(BlockSmoother)"/> 
    <ParameterList name="parameters">
      <Parameter name="verbosity"                        type="string"  value="off"/> 
      <Parameter name="number of levels"                 type="int"     value="2"/> 
      <Parameter name="smoother: all but coarsest level" type="string"  value="myFineSmoother"/> 
      <Parameter name="smoother: coarsest level"         type="string"  value="MERGE_AND_SOLVE"/> 
      <Parameter name="muelu xml file for block 0"       type="string"  value="Input/tsi_simplrocketnozzle_monolithic_amgnxn_stru.xml"/> 
      <Parameter name="muelu xml file for block 1"       type="string"  value="Input/tsi_simplrocketnozzle_monolithic_amgnxn_term.xml"/> 
    </ParameterList>
  </ParameterList>

  <!-- Smoothers  -->

  <ParameterList name="myFineSmoother">
    <Parameter name="type"   type="string"  value="BGS"/>
    <ParameterList name="parameters">
      <Parameter name="blocks"      type="string"  value="(0),(1)"/> 
      <Parameter name="smoothers"   type="string"  value="REUSE_MUELU_SMOOTHER,myIFPACK"/>  
      <Parameter name="sweeps"      type="int"     value="1"/>
      <Parameter name="omega"       type="double"  value="1.0"/>
    </ParameterList>
  </ParameterList>

  <ParameterList name="myIFPACK">
    <Parameter name="type"   type="string"  value="IFPACK"/>
    <ParameterList name="parameters">
      <Parameter name="type"                           type="string"  value="point relaxation"/>
      <ParameterList name="ParameterList">
        <Parameter name="relaxation: type"             type="string"  value="Gauss-Seidel"/>
        <Parameter name="relaxation: backward mode"    type="bool"    value="false"/>
        <Parameter name="relaxation: sweeps"           type="int"     value="2"/>
        <Parameter name="relaxation: damping factor"   type="double"  value="1.0"/>
      </ParameterList>
    </ParameterList>
  </ParameterList>

</ParameterList>
