{
  "version": 5,
  "configurePresets": [
    {
      "name": ".docker_base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RELEASE",
        "CMAKE_CXX_COMPILER": "/usr/bin/mpic++",
        "CMAKE_C_COMPILER": "/usr/bin/mpicc",
        "CMAKE_CXX_FLAGS": "-msse3 -Werror",
        "CMAKE_CXX_FLAGS_RELEASE": "-O2 -funroll-loops",
        "CMAKE_CXX_FLAGS_DEBUG": "-O2 -funroll-loops",
        "CMAKE_C_FLAGS": "-msse3 -Werror",
        "CMAKE_C_FLAGS_RELEASE": "-O2 -funroll-loops",
        "CMAKE_C_FLAGS_DEBUG": "-O2 -funroll-loops",
        "CMAKE_EXE_LINKER_FLAGS": "-lopen-pal -fuse-ld=gold",
        "CMAKE_EXE_LINKER_FLAGS_RELEASE": "-O2",
        "CMAKE_EXE_LINKER_FLAGS_DEBUG": "-O2",
        "INCLUDE_INSTALL_DIR": "/opt/baci-dependencies/include",
        "LIB_INSTALL_DIR": "/opt/baci-dependencies/lib",
        "Trilinos_PREFIX": "/opt/baci-dependencies",
        "QHULL_LIBRARY_DIR": "/opt/baci-dependencies/lib",
        "QHULL_INCLUDE_DIR": "/opt/baci-dependencies/include/libqhull",
        "MPI_RUN": "/usr/bin/mpirun",
        "PVPYTHON": "/opt/baci-dependencies-testing/ParaView-5.5.2-Qt5-MPI-Linux-64bit/bin/pvpython",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "BACI_WITH_GOOGLETEST": "ON",
        "BUILD_DOXYGEN": "ON",
        "BACI_BUILD_READTHEDOCS": "ON",
        "DOXYGEN_USE_LOCAL_MATHJAX": "ON",
        "DOXYGEN_LOCAL_MATHJAX_BASEPATH": "/opt/baci-dependencies-testing/MathJax-2.7.9"
      }
    },
    {
      "name": "docker",
      "displayName": "Release build for Docker image",
      "description": "Build release version of BACI on a Docker image",
      "inherits": [
        ".docker_base"
      ]
    },
    {
      "name": "docker_debug",
      "displayName": "Debug build for Docker image",
      "description": "Build debug version of BACI on a Docker image",
      "inherits": [
        ".docker_base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "DEBUG"
      }
    },
    {
      "name": "docker_asan",
      "displayName": "ASAN build for Docker image",
      "description": "Build release version of BACI with address sanitizer on a Docker image",
      "inherits": [
        ".docker_base"
      ],
      "cacheVariables": {
        "BACI_WITH_ADDRESS_SANITIZER": "ON",
        "CMAKE_EXE_LINKER_FLAGS": "-lopen-pal -fuse-ld=lld"
      }
    },
    {
      "name": "docker_codeclimate",
      "displayName": "Code climate job with clang-tidy",
      "description": "Configure BACI for code climate checks",
      "inherits": [
        ".docker_base"
      ],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-msse3",
        "CMAKE_C_FLAGS": "-msse3"
      }
    },
    {
      "name": "docker_coverage",
      "displayName": "Coverage report for Docker image",
      "description": "Build unoptimized version of BACI with coverage instrumentation on a Docker image",
      "inherits": [
        ".docker_base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "COVERAGE",
        "CMAKE_CXX_FLAGS_COVERAGE": "-O0 -g -fprofile-arcs -ftest-coverage",
        "CMAKE_EXE_LINKER_FLAGS_COVERAGE": "-lopen-pal -fuse-ld=lld",
        "BACI_WITH_ARBORX": "OFF",
        "BACI_WITH_MIRCO": "ON"
      }
    }
  ]
}
