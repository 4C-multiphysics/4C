#ifndef BACI_CONFIG_H
#define BACI_CONFIG_H

#define BACI_VERSION_MAJOR @baci_VERSION_MAJOR@
#define BACI_VERSION_MINOR @baci_VERSION_MINOR@

// This flag guards assertions and special checks that are often expensive and should only run when debugging.
#cmakedefine BACI_DEBUG

#ifndef DSERROR_DUMP
#cmakedefine DSERROR_DUMP
#endif

#ifndef TRAP_FE
#cmakedefine TRAP_FE
#endif

#define BACI_NAMESPACE_OPEN namespace BACI {
#define BACI_NAMESPACE_CLOSE }


// Centrally include MPI which is a core dependency that needs configuration.
// Disable the (deprecated) C++ bindings of OpenMPI. We are not using them, and they throw warnings
// that are false positives.
#define OMPI_SKIP_MPICXX 1
#include <mpi.h>  // IWYU pragma: export

#endif
