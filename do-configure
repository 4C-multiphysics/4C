#!/bin/sh

# ln -s /usr/lib/blitz/include/blitz/gnu /usr/include/blitz

BACI_HOME=`dirname $0`
EXTRA_ARGS=$@

cmake \
    -D Trilinos_DIR:FILEPATH="/home/uli/fem/sandia/Trilinos_full" \
    -D CMAKE_VERBOSE_MAKEFILE:BOOL=OFF \
    -D D_ALE:BOOL=ON \
    -D D_FLUID2:BOOL=ON \
    -D D_FLUID3:BOOL=ON \
    -D D_WALL1:BOOL=ON \
    -D D_THERMO:BOOL=ON \
    -D D_SOLID3:BOOL=ON \
    -D HAVENOT_SUPERLU:BOOL=ON \
    $EXTRA_ARGS \
    ${BACI_HOME}
