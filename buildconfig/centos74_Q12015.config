CMAKE_COMMAND=/usr/bin/cmake

# path to (Open)MPI
MPIDIR=/usr/lib64/openmpi
MPIRUN=$MPIDIR/bin/mpirun
MPIINCLUDEDIR=/usr/include/openmpi-x86_64/

# optimization flags (used for C and C++ code)
CFLAGS="-Wall -Wno-unknown-pragmas -Wignored-qualifiers -mfpmath=sse -msse3"
CXXFLAGS="-std=c++11 -Wall -Wno-unknown-pragmas -Wignored-qualifiers -mfpmath=sse -msse3 -Wno-maybe-uninitialized"
CXXFLAGSRELEASE="-O2 -funroll-loops"

# optimization flags for Fortran
FFLAGS="-Wall"
FFLAGSRELEASE="-O3 -funroll-all-loops -malign-double"

# linker flags, use gold linker because it is much faster...
LINKERFLAGS="-lhdf5_hl -fuse-ld=gold"
LINKERFLAGSRELEASE="-O2"

# library path (3d party libraries for BACI)
INCLUDE_INSTALL_DIR="/lnm/lib/Q3_2017/centos/TPL/include"
LIB_INSTALL_DIR="/lnm/lib/Q3_2017/centos/TPL/lib"

# path to Trilinos
Trilinos_PREFIX="/lnm/lib/Q1_2015/trilinos/cos74_openmpi_release"

# Trilinos package configuration
BUILD_Teko=OFF
BUILD_Stratimikos=OFF
BUILD_MueLu=ON
BUILD_MueLuExperimental=ON

if [ $USE_ACML == 1 ]; then
  echo "!!!!!!!!!!!!!!!!!!!!  WARNING  !!!!!!!!!!!!!!!!!!!!!!!!"
  echo "!! WARNING: ACML not supported on FC22               !!"
  echo "!! Switching to OpenBLAS instead.                    !!"
  echo "!!!!!!!!!!!!!!!!!!!!  WARNING  !!!!!!!!!!!!!!!!!!!!!!!!"
  echo
fi
# libM replacement
AMDLIBMDIR_PATH=""

# AMD core math library BLAS/LAPACK replacement
ACMLDIR_PATH=""
BLAS_LIBS="/lnm/lib/Q3_2017/centos/TPL/lib/libopenblas.a"
LAPACK_LIBS="/lnm/lib/Q3_2017/centos/TPL/lib/libopenblas.a;/usr/lib64/libgfortran.so.3"
BLA_VENDORSTRING="openBLAS.0.2.20"
echo "!!!!!!!!!!!!!!!!!!!!!!  INFO  !!!!!!!!!!!!!!!!!!!!!!!!!"
echo "!! Using high performance BLAS routines based on     !!"
echo "!! OpenBLAS.                                         !!"
echo "!!!!!!!!!!!!!!!!!!!!!!  INFO !!!!!!!!!!!!!!!!!!!!!!!!!!"

# boost library
BOOST_INCLUDEDIR=/lnm/lib/Q1_2015/boost_1_58_centos/include
BOOST_LIBRARYDIR=/lnm/lib/Q1_2015/boost_1_58_centos/lib
USE_USERSPECIFIED_BOOST=OFF # bypass cmake FindBoost script (default: OFF)
BOOST_EXCLUDE_SYSTEM_PATHS="OFF"

# qhull library
QHULL_LIBRARYDIR=$LIB_INSTALL_DIR
QHULL_INCLUDEDIR=$INCLUDE_INSTALL_DIR/qhull

# Cubit PATH (only needed for framework tests)
CUBIT_PATH="/lnm/programs64/cubit-13.2/bin"
