CMAKE_COMMAND=cmake

# path to Intel MPI
MPIDIR=$MPI_BASE/bin64
MPIRUN=$MPIDIR/bin/mpirun

# compiler
CXX=$MPIDIR/mpiicpc
CC=$MPIDIR/mpiicc
F90=$MPIDIR/mpiifort

# optimization flags (used for C and C++ code)
CFLAGS=""
CFLAGSRELEASE="-O3 -xavx -override-limits -D_FILE_OFFSET_BITS=64 -D_LARGEFILE64_SOURCE -DMPICH_IGNORE_CXX_SEEK"
CXXFLAGS=""
CXXFLAGSRELEASE="-O3 -xavx -std=gnu++0x -qoverride-limits -D_FILE_OFFSET_BITS=64 -D_LARGEFILE64_SOURCE -DMPICH_IGNORE_CXX_SEEK "

# linker flags
LINKERFLAGS="-lhdf5_hl"
LINKERFLAGSRELEASE="-O2"
FFLAGS=""
FFLAGSRELEASE="-O2 -override-limits -D_FILE_OFFSET_BITS=64 -D_LARGEFILE64_SOURCE"

# library path (3d party libraries for BACI)
INCLUDE_INSTALL_DIR="$TPL_BASE_DIR/lib/include"
LIB_INSTALL_DIR="$TPL_BASE_DIR/lib/lib"

# path to Trilinos
Trilinos_PREFIX="$TRILINOS_BASE_DIR"

# Trilinos package configuration
BUILD_Teko=OFF
BUILD_Stratimikos=OFF
BUILD_MueLu=OFF
BUILD_MueLuExperimental=OFF

if [ $USE_ACML == 1 ]; then
  echo "!!!!!!!!!!!!!!!!!!!!  WARNING  !!!!!!!!!!!!!!!!!!!!!!!!"
  echo "!! WARNING: ACML not supported on Haswell cluster    !!"
  echo "!! Switching to OpenBLAS instead.                    !!"
  echo "!!!!!!!!!!!!!!!!!!!!  WARNING  !!!!!!!!!!!!!!!!!!!!!!!!"
  echo
fi
