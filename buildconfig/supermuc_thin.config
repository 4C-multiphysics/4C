# deal package
if [ $USE_DEAL == 1 ]; then
  DEAL_II_DIR="/lnm/Q1_2015/deal.II/"
  BUILD_Deal=ON
fi

# boost library
BOOST_INCLUDEDIR=$BOOST_INCDIR
BOOST_LIBRARYDIR=$BOOST_LIBDIR

# qhull library
QHULL_LIBRARYDIR=$LIB_INSTALL_DIR
QHULL_INCLUDEDIR=$INCLUDE_INSTALL_DIR/qhull

# FFTW
FFTW_INCLUDEDIR="$FFTW_BASE/include"
FFTW_LIBRARYDIR="$FFTW_LIBDIR"

# SuperLu and Umfpack
FOUND_NO_SUPERLU=ON
FOUND_NO_UMFPACK=OFF

