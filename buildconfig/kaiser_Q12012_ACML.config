
OS_VERSION="CentOS62"
CMAKE_COMMAND=/lnm/cmake/2.8.7/bin/cmake

# path to (Open)MPI
MPIDIR=/opt/openmpi/1.5.5/gcc

# optimization flags (used for C and C++ code)
CXXFLAGS="-Wall -ansi"
CXXFLAGSRELEASE="-pipe -O3 -ffast-math -funroll-all-loops -fpeel-loops -ftracer -funswitch-loops -funit-at-a-time"

# linker flags
LINKERFLAGS="-Xlinker -defsym -Xlinker MAIN__=main"
LINKERFLAGSRELEASE="-O2"

# library paths
INCLUDE_INSTALL_DIR="/lnm/lib/Q1_2012/kaiser/openmpi-gcc-1.5.5-acmlc/include"
LIB_INSTALL_DIR="/lnm/lib/Q1_2012/kaiser/openmpi-gcc-1.5.5-acml/lib"

# Trilinos path
Trilinos_PREFIX="/lnm/lib/Q1_2012/trilinos/kaiser-openmpi-gcc-1.5.5-acml/"

TRILINOS_DEV=ON
BUILD_Teko=OFF
BUILD_MueLu=OFF
BUILD_MueLuExperimental=OFF

# libM replacement
AMDLIBMDIR_PATH="/opt/acml4.4.0/gfortran64"

# AMD core math library BLAS/LAPACK replacement
ACMLDIR_PATH="/opt/acml4.4.0/gfortran64"
BLAS_LIBS="/opt/acml4.4.0/gfortran64/lib/libacml.a /opt/acml4.4.0/gfortran64/lib/libacml_mv.a"
LAPACK_LIBS="/opt/acml4.4.0/gfortran64/lib/libacml.a /opt/acml4.4.0/gfortran64/lib/libacml_mv.a"
BLA_VENDORSTRING="ACML.4.4.0"

# boost library
BOOST_INCLUDEDIR=/usr/include
BOOST_LIBRARYDIR=/usr/lib64
USE_USERSPECIFIED_BOOST=ON # bypass cmake FindBoost script (default: OFF)
    #-D Boost_DIR:FILEPATH=/usr/lib64 \

# cubit only needed for nightly framework tests
CUBIT_PATH=
    
