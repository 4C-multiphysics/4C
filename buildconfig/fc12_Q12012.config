OS_VERSION="FC12"
CMAKE_COMMAND=cmake

# path to (Open)MPI
MPIDIR=/usr/lib/openmpi

# optimization flags (used for C and C++ code)
CXXFLAGS="-Wall -mfpmath=sse -msse3"
CFLAGS="-Wall -mfpmath=sse -msse3"
CXXFLAGSRELEASE="-O3"

# linker flags
LINKERFLAGS="-lhdf5_hl"
LINKERFLAGSRELEASE="-O2"

# library path (3d party libraries for BACI)
INCLUDE_INSTALL_DIR="/lnm/lib/Q1_2012/fc8/openmpi-gcc/include"
LIB_INSTALL_DIR="/lnm/lib/Q1_2012/fc8/openmpi-gcc/lib"

# path to Trilinos
Trilinos_PREFIX="/lnm/lib/Q1_2012/trilinos/fc8_openmpi_release/"

# Trilinos package configuration
TRILINOS_DEV=OFF
BUILD_Teko=OFF
BUILD_MueLu=OFF
BUILD_MueLuExperimental=OFF

# libM replacement
AMDLIBMDIR_PATH=""

# AMD core math library BLAS/LAPACK replacement
ACMLDIR_PATH=""
BLAS_LIBS=""
LAPACK_LIBS=""
BLA_VENDORSTRING=""

# boost library
BOOST_INCLUDEDIR=$INCLUDE_INSTALL_DIR
BOOST_LIBRARYDIR=$LIB_INSTALL_DIR
USE_USERSPECIFIED_BOOST=OFF # bypass cmake FindBoost script (default: OFF)
BOOST_EXCLUDE_SYSTEM_PATHS="OFF"

# Cubit PATH (only needed for framework tests)
CUBIT_PATH="/lnm/programs/cubit-13.2/bin"

